---
interface Props {
  pageTitle: string;
  description: string;
}

const { description, pageTitle } = Astro.props;

import "@radix-ui/themes/styles.css";

import "@/styles/style.css";
import "@/styles/app.css";

import { ClientRouter } from "astro:transitions";

import { nativeTheme } from "electron";
---

<!doctype html>
<html lang="en">
  <head>
    <!-- this info -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- page info -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{pageTitle} // astro-electron | platform: {process.platform}</title>
    <meta name="description" content={description} />

    <!-- trans ition-->
    <ClientRouter />
  </head>

  <body class="themeing">
    <div
      class=`titlebar themeing ${process.platform === "win32" ? "win" : "mac"}`
    >
      {pageTitle} // astro-electron | platform: {process.platform} | {
        Electron.nativeTheme
      }
    </div>
    <slot />
  </body>
</html>
